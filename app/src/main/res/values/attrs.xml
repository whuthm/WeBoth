<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--TableView-->
    <declare-styleable name="TableView">
        <attr name="border" format="color|reference" />
        <attr name="sizeBorder" format="dimension|reference" />
        <attr name="gap" format="color|reference" />
        <attr name="sizeGap" format="dimension|reference" />
        <attr name="widthGap" format="reference|dimension"  />
        <attr name="heightGap" format="reference|dimension" />
    </declare-styleable>

    <attr name="scrollMode">
        <flag name="both" value="0x0" />
        <flag name="horizontal" value="0x1" />
        <flag name="vertical" value="0x2" />
        <flag name="selective" value="0x3" />
    </attr>

    <declare-styleable name="HVScrollView">
        <attr name="scrollMode" />
    </declare-styleable>

</resources>